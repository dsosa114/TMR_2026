<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="box_inertia" params="m l w h o_xyz o_rpy">
        <inertial>
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <mass value="${m}"/>
            <inertia ixx="${1/12 * m * (w*w + h*h)}" ixy="0.0" ixz="0.0" 
                     iyy="${1/12 * m * (l*l + h*h)}" iyz="0.0" 
                     izz="${1/12 * m * (l*l + w*w)}"/>
        </inertial>
    </xacro:macro>
</robot>